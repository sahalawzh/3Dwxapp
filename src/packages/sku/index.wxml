
  <view class="jfk-sku is-theme-{{theme}} is-{{boxStatus}} is-sku-{{skuTheme}}"><jfk-popup status="{{status}}" component-theme="{{theme}}" gaps="{{gaps}}" locked="{{locked}}" position="bottom"  bind:popupclose="_skuPopupClose"><view class="jfk-sku__cont"  catch:tap="noopFunc"><view class="good {{showStock === \'true\' ? 'hasStock' : ''}}" ><image class="good-img" src="{{good.img}}"/><view class="good-info"><jfk-elip class="good-name font-size--30 font-color-white">{{good.name}}</jfk-elip><view class="good-price color-golden font-size--48 jfk-font-number"><text class="jfk-price__currency">{{symbol}}</text><text class="jfk-price__number">{{good.price}}</text></view><view class="font-size--24 font-color-light-gray-common"  wx:if="{{showStock === 'true'}}">{{'库存 ' + good.stock}}</view></view></view><view class="list"><scroll-view scroll-y="true" class="list-cont" style="max-height:{{height}}px"><view class="item"  wx:for="{{spec}}" wx:key="spec_type"><view class="title font-size--24 font-color-light-gray-common">{{item.spec_type_name}}</view><view class="cont"><jfk-radio wx:for="{{item.spec_data}}" wx:for-item="_item" wx:for-index="_index" wx:key="spec_id" class="spec-item color-golden font-size--30 jfk-d-ib" data-sid="{{_item.spec_id}}" data-row="{{index}}" catch:tap="_pickSpec" component-theme="{{theme}}" checked="{{specComb[index] == _item.spec_id}}" popup="true" disabled="{{specStatus[index + '_' + _item.spec_id]}}"><text>{{_item.spec_name}}</text></jfk-radio></view></view><view class="placeholder"/></scroll-view></view><view class="num jfk-flex is-justify-space-between is-align-middle" wx:if="{{skuTheme === 'full'}}"><view class="font-size--24 quota-box"><view class="font-color-extra-light-gray">购买数量</view><view class="quota font-color-light-gray"><text wx:if="{{showMinPurchase === 'true'}}" class="{{showQuota === \'true\' ? 'hasLimit' : ''}}">{{minPurchaseNum}}件起售</text><text wx:if="{{showQuota === 'true'}}">{{'限购' + quota + '件'}}</text></view></view><jfk-stepper