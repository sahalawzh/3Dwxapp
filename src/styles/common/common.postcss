.open-type-btn{
  padding-left: 0;
  padding-right: 0;
  line-height: normal;
  background-color: inherit;
  &::after{
    border: none;
  }
}
.product-price-maket {
  font-size: 24rpx;
  position: relative;
  display: inline-block;
  &:before{
    content: '';
    position: absolute;
    width: 100%;
    height: 1px;
    -webkit-transform: scale(1, 0.5);
    transform: scale(1, 0.5);
    top: 48%;
    left: 7rpx;
    background-color: currentColor;
  }
}
.wow-background-image {
  position:relative;
  background-repeat:no-repeat;
  background-position:center;
  background-size:cover;
}
.wow-radio {
  display: inline-block;
  position: relative;
  .radio {
    display: inline-block;
    width: 16px;
    height: 16px;
    border-radius: 50%;
    vertical-align: middle;
    cursor: pointer;
    border: 1rpx solid #474747;
    &.disabled {
      background-color: #e8e8e8;
      pointer-events: none;
    }
  }
  .ico_selected {
    width: 100%;
    height: 100%;
  }
}
.float-box {
  &.isRuleShow {
    display: block;
  }
  &.isRuleHide {
    display: none;
  }
  &-mask {
    height: 100%;
    width: 100%;
    background-color: rgba(0, 0, 0, 0.5);
    z-index: 100;
    position: fixed;
    top: 0;
    left: 0;
  }
  &-wrap {
    width: 580rpx;
    height: 100%;
    z-index: 101;
    position: fixed;
    top: 0;
    right: 0;
    background-color: #fff; 
  }
  .animation-element {
    width: 580rpx;
    height: 100%;
    background-color: #fff; 
    position: absolute;
    top: 0;
    bottom: 0;
    .btn-wrap{
      position: fixed;
      bottom: 0;
      padding: 24rpx 0 60rpx 56rpx;
      z-index: 102;
      background-color: #fff; 
      .btn {
        width: 470rpx;
        height: 72rpx;
        line-height: 72rpx;
        border-radius: 32rpx;
        text-align: center;
        color: #fff;
        background-color: #145ee1;
      }
    }
  }
}
button.btn-disabled, button[disabled] {
  pointer-events: none;
  background-color: #ccc !important;
}
input[disabled]{
  color: #a3a3a3 !important;
}