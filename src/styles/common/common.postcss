.wow-flex {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex
}

.wow-flex.is-justify-start {
  -webkit-box-pack: start;
  -webkit-justify-content: flex-start;
  justify-content: flex-start
}

.wow-flex.is-justify-end {
  -webkit-box-pack: end;
  -webkit-justify-content: flex-end;
  justify-content: flex-end
}

.wow-flex.is-justify-center {
  -webkit-box-pack: center;
  -webkit-justify-content: center;
  justify-content: center
}

.wow-flex.is-justify-space-around {
  -webkit-justify-content: space-around;
  justify-content: space-around
}

.wow-flex.is-justify-space-between {
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
  justify-content: space-between;
}

.wow-flex.is-align-top {
  -webkit-box-align: start;
  -webkit-align-items: flex-start;
  align-items: flex-start
}

.wow-flex.is-align-middle {
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center
}

.wow-flex.is-align-bottom {
  -webkit-box-align: end;
  -webkit-align-items: flex-end;
  align-items: flex-end
}

