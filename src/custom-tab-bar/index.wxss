.tab-bar {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  height: 150rpx;
  background: white;
  display: flex;
  color: #9b9b9b;
  z-index: 1002;
}

.tab-bar-border {
  background-color: rgba(0, 0, 0, 0.33);
  position: absolute;
  left: 0;
  top: 0;
  width: 100%;
  height: 2px;
  transform: scaleY(0.5);
}

.tab-bar-item {
  position: relative;
  flex: 1;
  text-align: center;
  display: flex;
  align-items: center;
  flex-direction: column;
  padding-top: 18rpx;
  z-index: 1004;
}

.tab-bar-item .tab-icon {
  width: 42rpx;
  height: 42rpx;
}

.tab-bar-item .tab-text {
  position: relative;
  font-size: 12px;
  padding-top: 15rpx;
  z-index: 1006;
}